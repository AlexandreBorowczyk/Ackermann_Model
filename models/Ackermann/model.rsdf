<!-- rosrun gazebo_ros spawn_model -model F-150 -sdf -file /home/bigb/gazebo_f150_ws/src/gazebo_f150/models/F150/model.sdf -->


<?xml version="1.0" ?>

<%

wheelbase             = 3.651
track_width           = 1.733
wheel_radius          = 0.445
wheel_width           = 0.297

ackermann_angle       = Math::atan2(track_width/2,wheelbase)

centerline_length     = 1.15

steering_arm_length   = 0.35

steering_arm_x        = -Math::cos(ackermann_angle)*steering_arm_length
steering_arm_y        = Math::sin(ackermann_angle)*steering_arm_length

tierod_length         = (track_width - 2*steering_arm_y - centerline_length)/2

front_wheel_locations = {
  "left"  => {:side => 1},
  "right" => {:side => -1},
}

%>


<sdf version="1.5">
  <model name="F150">
    <pose>0 0 0 0 0 0</pose>
    <static>false</static>

    <link name="chassis">
    <pose>0 0 0 0 0 0</pose>
      <inertial>
        <pose>-1.8 0 0 0 0 0</pose>
        <inertia>
          <ixx>1000</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1000</iyy>
          <iyz>0</iyz>
          <izz>1000</izz>
        </inertia>
        <mass>1000</mass>
      </inertial>
      <collision name="base_link_collision">
        <pose>0 0 0.3 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.1 0.1</size>
          </box>
        </geometry>
      </collision>
      <visual name="base_link_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>1.0</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <link name="steering_centerlink_link">
    <pose><%= steering_arm_x %> 0 <%= wheel_radius%> 0 0 0</pose>
      <inertial>
        <inertia>
          <ixx>0.1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.1</iyy>
          <iyz>0</iyz>
          <izz>0.1</izz>
        </inertia>
        <mass>0.1</mass>
      </inertial>
      <collision name="collision">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
            <box>
              <size>0.1 0.1 0.1</size>
            </box>
        </geometry>
      </collision>
      <visual name="visual">
        <pose>0 0 0 1.57079632679 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length><%= centerline_length %></length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="centerlink2chassis_joint" type="prismatic">
      <parent>chassis</parent>
      <child>steering_centerlink_link</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>


    <%
      front_wheel_locations.keys.each do |k|
        side = front_wheel_locations[k][:side]
    %>

    <%= "<link name=" + '"front_' + k +  '_wheel_link">' %>
    <pose>0 <%= side * track_width/2 %> <%= wheel_radius %> 0 0 0</pose>
      <inertial>
        <inertia>
          <ixx>2</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>3.46</iyy>
          <iyz>0</iyz>
          <izz>2</izz>
        </inertia>
        <mass>35.0</mass>
      </inertial>
      <collision name="collision">
      <pose>0 0 0 <%= Math::PI/2 %> 0 0</pose>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_width %></length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.7</mu>
              <mu2>0.7</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="visual">
      <pose>0 0 0 0 0 <%= side * Math::PI %></pose>
        <geometry>
          <mesh>
            <uri>model://F150/meshes/wheel.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <%= "<link name=" + '"' + k + '_steering_arm_link">' %>
    <pose><%= steering_arm_x/2 %> <%= side * (track_width/2 -steering_arm_y/2) %>  <%= wheel_radius %>  0 0 0</pose> <!-- Front wheel position with rotation -->
      <inertial>
        <inertia>
          <ixx>0.1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.1</iyy>
          <iyz>0</iyz>
          <izz>0.1</izz>
        </inertia>
        <mass>0.1</mass>
      </inertial>
      <collision name="collision">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.005</radius>
            <length>0.01</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <pose> 0 0 0 0 <%= Math::PI/2 %> <%= side * ackermann_angle %></pose>
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length><%= steering_arm_length %></length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <%= "<link name=" + '"' + k + '_tierod_link">' %>
    <pose><%= steering_arm_x %> <%= side * (track_width/2 - steering_arm_y - tierod_length/2) %> <%= wheel_radius %> 0 0 0</pose> <!-- Front wheel position with rotation -->
      <inertial>
        <inertia>
          <ixx>0.1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.1</iyy>
          <iyz>0</iyz>
          <izz>0.1</izz>
        </inertia>
        <mass>0.1</mass>
      </inertial>
      <collision name="collision">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.1 0.1</size>
          </box>
        </geometry>
      </collision>
      <visual name="visual">
        <pose>0 0 0 <%= Math::PI/2 %> 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.01</radius>
            <length><%= tierod_length %></length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <%= "<joint name=" + '"' + k + '_arm2wheel_joint" type="revolute">' %>
      <parent><%= k + '_steering_arm_link' %></parent>
      <child><%= 'front_' + k + '_wheel_link' %></child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <%= "<joint name=" + '"' + k + '_arm2tierod_joint" type="ball">' %>
      <parent><%= k + '_steering_arm_link' %></parent>
      <child><%= k + '_tierod_link'%></child>
      <pose>0 <%= side * tierod_length/2 %> 0 0 0 0</pose>
    </joint>

    <%= "<joint name=" + '"' + k + '_tierod2centerlink_joint" type="ball">' %>
      <parent>steering_centerlink_link</parent>
      <child><%= k + '_tierod_link'%></child>
      <pose>0 <%= -side * tierod_length/2 %> 0 0 0 0</pose>
    </joint>

    <%= "<joint name=" + '"' + k + '_wheel2chassis_joint" type="revolute">' %>
      <parent><%= k + '_steering_arm_link' %></parent>
      <child>chassis</child>
      <pose>0 <%= side * track_width/2 %> <%= wheel_radius %> 0 0 0</pose> <!-- Front wheel position -->
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <%= "<link name=" + '"rear_' + k + '_wheel_link">' %>
    <pose><%= -wheelbase %> <%= side * track_width/2 %> <%= wheel_radius %> 0 0 0</pose>
      <inertial>
        <inertia>
          <ixx>2</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>3.46</iyy>
          <iyz>0</iyz>
          <izz>2</izz>
        </inertia>
        <mass>35.0</mass>
      </inertial>

      <collision name="rear_right_wheel_collision">
      <pose>0 0 0 <%= Math::PI/2 %> 0 0</pose>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_width %></length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.7</mu>
              <mu2>0.7</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="rear_right_wheel_visual">
      <pose>0 0 0 <%= side * Math::PI%> 0 0 </pose>
        <geometry>
          <mesh>
            <uri>model://F150/meshes/wheel.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <%= "<joint name=" + '"rear_' + k + '_wheel_joint" type="revolute">' %>
      <parent>chassis</parent>
      <child><%= 'rear_' + k + '_wheel_link' %></child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>


<% end %>



</model>
</sdf>
